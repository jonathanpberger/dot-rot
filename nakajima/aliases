# General stuff
alias mv='mv -i'
alias rm='rm -i'
alias l="ls -lh"
alias ll="ls -lha"

# Convenience
alias edit_shell='vi ~/.bash_profile && source ~/.bash_profile'

# Run specs with color
alias sp="spec spec/ --colour"

# Rails shortcuts
alias ss="script/server"
alias sc="script/console"

# Git
alias gb='git branch -a -v'
alias gs='git status'
alias gd='git diff'
alias gpp="git pull && git push"
