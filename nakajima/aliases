# General stuff
alias mv='mv -i'
alias rm='rm -i'
alias l="ls -lh"
alias ll="ls -lha"

# Make the "tree" command pretty and useful by default http://feedproxy.google.com/~r/Command-line-fu/~3/IOPOAr98MRo/make-the-tree-command-pretty-and-useful-by-default
alias tree="tree -CAFa -I 'CVS|*.*.package|.svn|.git' --dirsfirst"

# Convenience
alias edit_shell='vi ~/.bash_profile && source ~/.bash_profile'

# Run specs with color
alias sp="spec spec/ --colour"

# Rails shortcuts
alias ss="script/server"
alias sc="script/console"

# Git
alias gb='git branch -a -v'
alias gs='git status'
alias gd='git diff'
alias gpp="git pull && git push"
# gc      => git checkout master
# gc bugs => git checkout bugs
function gc {
  if [ -z "$1" ]; then
    git checkout master
  else
    git checkout $1
  fi
}

# Git Clear Deleted
alias gcd="git status | grep deleted: | cut -f 2 -d : | xargs git rm"

# Colorized grep
alias grep='GREP_COLOR="1;32" LANG=C grep --color=auto'